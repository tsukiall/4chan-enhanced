{
  "name": "4chan Enhanced",
  "description": "QOL improvements and additional functionality over the 4chan experience",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "./js/content.js"
      ],
      "css": [
        "./css/content.css"
      ],
      "matches": [
        "*://boards.4chan.org/*"
      ]
    },
    {
      "js": [
        "./js/localStorage.js"
      ],
      "matches": [
        "*://boards.4chan.org/*"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "./js/background.js"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": [
        "*://boards.4chan.org/*"
      ]
    }
  ]
}